<!-- 													<include name="**" /> -->
<!-- 													<exclude name="*.zip" /> -->
<!-- 												</fileset> -->
<!-- 											</upload> -->

<!-- 											<upload bucketName="${dist.bucket}" file="${dist.full.path}" -->
<!-- 												toFile="${dist.path}/${dist.file.name}" publicRead="true"> -->
