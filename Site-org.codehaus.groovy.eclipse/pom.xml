	</parent>
	<groupId>org.codehaus.groovy.eclipse</groupId>
	<artifactId>org.codehaus.groovy.eclipse.site</artifactId>
	<version>3.4.1-SNAPSHOT</version>
	<packaging>eclipse-update-site</packaging>

