						<id>source-feature</id>
						<phase>package</phase>
						<goals>
							<goal>source-feature</goal>
						</goals>
						<configuration>
							<excludes>
								<plugin id="org.codehaus.groovy.eclipse" />
								<!-- When building e43j8, these will be included in JDT patch but source will not be available: -->
								<feature id="org.eclipse.jdt.a2.java8patch" />
